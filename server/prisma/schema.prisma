generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SALES_TOOLS_2026_DATABASE_URL")
}

model Message {
  id              String   @id @default(uuid())
  direction       String
  from            String
  to              String
  text            String?
  status          String?
  telnyxMessageId String?
  telnyxEventId   String?
  occurredAt      DateTime?
  readAt          DateTime?
  state           MessageState @default(UNREAD)
  tags            Json?
  createdAt       DateTime @default(now())
  raw             Json?

  events          MessageEvent[]
  attachmentLinks MessageAttachment[]
}

enum MessageState {
  READ
  UNREAD
  ARCHIVED
  DELETED
}

model FromNumber {
  id                    String   @id @default(uuid())
  number                String   @unique
  description           String?
  purpose               String?
  tags                  String[] @default([])
  dateAdded             DateTime @default(now())
  firstUsedAt           DateTime @default(now())
  lastUsedAt            DateTime @default(now())
  lastSentAt            DateTime?
  lastReceivedAt        DateTime?
  totalMessagesSent     Int      @default(0)
  totalMessagesReceived Int      @default(0)
}

model ToNumber {
  id         String   @id @default(uuid())
  number     String   @unique
  firstUsedAt DateTime @default(now())
  lastUsedAt  DateTime @default(now())
}

model MessageEvent {
  id              String   @id @default(uuid())
  telnyxEventId   String?  @unique
  telnyxMessageId String?
  eventType       String
  status          String?
  occurredAt      DateTime
  payload         Json?
  messageId       String?
  createdAt       DateTime @default(now())

  message         Message? @relation(fields: [messageId], references: [id])

  @@index([telnyxMessageId])
  @@index([occurredAt])
}

model Conversation {
  id                   String   @id @default(uuid())
  ownerNumber          String
  counterparty         String
  lastMessageAt        DateTime
  lastMessageText      String
  lastMessageDirection String
  lastMessageId        String
  unreadCount          Int      @default(0)
  lastReadAt           DateTime?
  lastSelectedAt       DateTime?
  state                ConversationState @default(ACTIVE)
  bookmarked           Boolean @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@unique([ownerNumber, counterparty], name: "owner_counterparty")
}

enum ConversationState {
  ACTIVE
  ARCHIVED
  DELETED
}

model Contact {
  id                 String   @id @default(uuid())
  firstName          String?
  lastName           String?
  email              String?
  address            String?
  company            String?
  phoneNumbers       Json?
  linkedInProfiles   Json?
  importedAt         DateTime?
  source             String   @default("manual")
  sourceImportMeta   Json?
  sourceDetails      Json?
  sourceExternalId   String?
  googleRaw          Json?
  googleFieldValues  Json?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([email])
  @@index([company])
  @@unique([source, sourceExternalId], map: "contacts_source_external_id_unique")
}

model Attachment {
  id           String            @id @default(uuid())
  ownerNumber  String?
  counterparty String?
  kind         AttachmentKind
  storage      AttachmentStorage @default(DATABASE)
  fileName     String
  mimeType     String?
  sizeBytes    Int               @default(0)
  storageKey   String?
  storageEtag  String?
  bytes        Bytes?
  metadata     Json?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  messageLinks MessageAttachment[]

  @@index([ownerNumber, counterparty])
  @@index([kind])
  @@index([storage])
  @@index([storageKey])
}

model MessageAttachment {
  id           String     @id @default(uuid())
  messageId    String
  attachmentId String
  createdAt    DateTime   @default(now())

  message      Message    @relation(fields: [messageId], references: [id], onDelete: Cascade)
  attachment   Attachment @relation(fields: [attachmentId], references: [id], onDelete: Cascade)

  @@unique([messageId, attachmentId])
  @@index([attachmentId])
}

enum AttachmentKind {
  FILE
  CONTACT
  MEDIA
  CAMERA
  LOCATION
}

enum AttachmentStorage {
  DATABASE
  OBJECT_STORE
}
