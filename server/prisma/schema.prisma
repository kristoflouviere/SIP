generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id              String   @id @default(uuid())
  direction       String
  from            String
  to              String
  text            String?
  status          String?
  telnyxMessageId String?
  telnyxEventId   String?
  occurredAt      DateTime?
  readAt          DateTime?
  state           MessageState @default(UNREAD)
  tags            Json?
  createdAt       DateTime @default(now())
  raw             Json?

  events          MessageEvent[]
}

enum MessageState {
  READ
  UNREAD
  ARCHIVED
  DELETED
}

model FromNumber {
  id         String   @id @default(uuid())
  number     String   @unique
  firstUsedAt DateTime @default(now())
  lastUsedAt  DateTime @default(now())
}

model ToNumber {
  id         String   @id @default(uuid())
  number     String   @unique
  firstUsedAt DateTime @default(now())
  lastUsedAt  DateTime @default(now())
}

model MessageEvent {
  id              String   @id @default(uuid())
  telnyxEventId   String?  @unique
  telnyxMessageId String?
  eventType       String
  status          String?
  occurredAt      DateTime
  payload         Json?
  messageId       String?
  createdAt       DateTime @default(now())

  message         Message? @relation(fields: [messageId], references: [id])

  @@index([telnyxMessageId])
  @@index([occurredAt])
}

model Conversation {
  id                   String   @id @default(uuid())
  ownerNumber          String
  counterparty         String
  lastMessageAt        DateTime
  lastMessageText      String
  lastMessageDirection String
  lastMessageId        String
  unreadCount          Int      @default(0)
  lastReadAt           DateTime?
  state                ConversationState @default(ACTIVE)
  bookmarked           Boolean @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@unique([ownerNumber, counterparty], name: "owner_counterparty")
}

enum ConversationState {
  ACTIVE
  ARCHIVED
  DELETED
}
